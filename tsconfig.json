{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "ES2017", "dom.iterable", "esnext"],
    "types": ["react", "react-dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "typeRoots": ["./typings", "./node_modules/@types"],
  "paths": {
    "@components/*": ["dist/*"],
    "@utils/*": ["dist/@hook/utils/*"],
    "@types": ["dist/*"],
    "idnd": ["dist/*"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "idnd"]
}
